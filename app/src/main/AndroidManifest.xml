<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidERestaurant"
        tools:targetApi="31">
        <activity
            android:name=".BadgeProvider"
            android:exported="false"
            android:label="@string/title_activity_badge_provider"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".OrderActivity"
            android:exported="false"
            android:label="@string/title_activity_order"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".BasketActivity"
            android:exported="false"
            android:label="@string/title_activity_basket"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".CartItems"
            android:exported="false"
            android:label="@string/title_activity_cart_items"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".DishDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_dish_detail"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".CategoryActivity"
            android:exported="false"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".EntreeActivity"
            android:exported="false"
            android:label="@string/title_activity_entree"
            android:theme="@style/Theme.AndroidERestaurant" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidERestaurant">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EntreeCompositionActivity"
            android:exported="false"
            android:label="@string/title_activity_plate_composition"
            android:theme="@style/Theme.AndroidERestaurant" />
    </application>

</manifest>